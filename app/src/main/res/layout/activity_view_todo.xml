<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTodoActivity">

    <TextView
        android:id="@+id/yourTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:text="YOUR TODO ITEM"
        android:textSize="30dp"
        android:layout_marginBottom="40dp"/>


    <TextView
        android:id="@+id/nameTodo"
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourTodo"


        android:text="Name:-" />

    <TextView
        android:id="@+id/descriptionTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_below="@+id/nameTodo"


        android:text="Description:-" />


    <TextView
        android:id="@+id/dateTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_below="@+id/descriptionTodo"


        android:text="Date:-" />


    <TextView
        android:id="@+id/timeTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_below="@+id/dateTodo"


        android:text="Time:-" />


    <Button

        android:layout_width="233dp"
        android:layout_height="97dp"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:text="EDIT"
        android:onClick="newTodo"/>


</RelativeLayout>